mixin icon(name,mod)
  if(mod)
    svg(class="svg-sprite-icon icon-" + name + ' ' + mod)
      use(xlink:href="img/svg/symbol/sprite.svg#" + name)
  else
    svg(class="svg-sprite-icon icon-" + name)
      use(xlink:href="img/svg/symbol/sprite.svg#" + name)

mixin pic(path, name, alt)
  picture
    source(srcset='img/' + path + '/' + name + '.webp' type="image/webp")
    img(srcset='img/' + path + '/' + name + '.jpg' alt="alt")